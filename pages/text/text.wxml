<!--pages/text/text.wxml-->
<!-- 1.基本使用 -->
<text>你好, 小程序\n</text>
<text>猪八戒\n</text>

<!-- 2.selectable: true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable="{{true}}">selecttable\n</text>
<text selectable>selecttable</text>

<!-- 3.space决定文本空格的大小 -->
<text>space space\n</text>
<text space="nbsp">space space\n</text>
<text space="ensp">space space\n</text>
<text space="emsp">space space\n</text>

<!-- 4.decode属性: 是否解码文本 -->
<text decode="{{true}}">5 &gt; 3 \n</text>
<text decode>5 &gt; 3\n</text>